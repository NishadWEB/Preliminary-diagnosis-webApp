<%- include('../headers/pre_login_header.ejs') %>
<main>
  <section class="auth-section">
    <div class="auth-container">
      <div class="auth-card">
        <!-- Header with Role-specific Icon -->
        <div class="auth-header">
          <div class="auth-icon">
              👤
          </div>
          <h1 class="auth-title">
            Patient Login
          </h1>
          <p class="auth-subtitle">
            Sign in to your patient account
          </p>
        </div>

        <!-- Error Message (Hidden by default) -->
        <div id="errorMessage" class="error-message" style="display: none;">
          <div class="error-icon">❌</div>
          <h3>Login Failed</h3>
          <p id="errorText">Invalid email or password</p>
        </div>

        <!-- Login Form -->
        <form class="auth-form" id="loginForm" action="patient" method="POST">
          <div class="form-group">
            <label for="email">Email Address</label>
            <input type="email" id="email" name="email" autocomplete="off" required>
          </div>

          <div class="form-group">
            <label for="password">Password</label>
            <div class="password-container">
              <input type="password" id="password" name="password" required minlength="1">
              <button type="button" class="toggle-password" id="togglePassword">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                  <path d="M12 4.5C7 4.5 2.73 7.61 1 12c1.73 4.39 6 7.5 11 7.5s9.27-3.11 11-7.5c-1.73-4.39-6-7.5-11-7.5zM12 17c-2.76 0-5-2.24-5-5s2.24-5 5-5 5 2.24 5 5-2.24 5-5 5zm0-8c-1.66 0-3 1.34-3 3s1.34 3 3 3 3-1.34 3-3-1.34-3-3-3z"/>
                </svg>
              </button>
            </div>
          </div>

          <button type="submit" class="submit-btn" id="submitBtn">
            <span class="btn-icon">🔑</span>
            Sign In
          </button>
        </form>

        <!-- Registration Redirect -->
        <div class="auth-redirect">
          <p>Don't have an account? 
            <a href="/auth/register/patient" class="redirect-link">
              Register here
            </a>
          </p>
        </div>
      </div>
    </div>
  </section>
</main>


<%- include('../main/footer.ejs') %>



<script src="/navbar/navbar.js"></script>
<script src="/login/patientLogin.js"></script>
</body>
</html>