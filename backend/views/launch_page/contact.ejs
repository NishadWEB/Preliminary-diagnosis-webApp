<%- include('../headers/launch-header.ejs') %>

<main>
  <div class="contact-hero">
    <h1>Contact Us</h1>
    <p>Get in touch with our team. We're here to answer any questions you may have about MediDiag and help you get started.</p>
  </div>

  <div class="contact-container">
    <!-- Contact Information -->
    <div class="contact-info">
      <div class="contact-info-header">
        <div class="contact-info-icon">📞</div>
        <h2>Get In Touch</h2>
      </div>
      <div class="contact-details">
        <div class="contact-item">
          <div class="contact-item-icon">📧</div>
          <div class="contact-item-content">
            <h3>Email Us</h3>
            <p><a href="mailto:medi.diag@gmail.com">medi.diag@gmail.com</a></p>
            <p>We typically respond within 24 hours</p>
          </div>
        </div>
        
        <div class="contact-item">
          <div class="contact-item-icon">📱</div>
          <div class="contact-item-content">
            <h3>Call Us</h3>
            <p><a href="tel:+911234567891">+91 1234567891</a></p>
            <p>Available Monday - Friday, 9AM - 6PM</p>
          </div>
        </div>
        
        <div class="contact-item">
          <div class="contact-item-icon">💬</div>
          <div class="contact-item-content">
            <h3>General Inquiries</h3>
            <p>For general questions about our platform, features, or how to get started</p>
          </div>
        </div>
        
        <div class="contact-item">
          <div class="contact-item-icon">🆘</div>
          <div class="contact-item-content">
            <h3>Technical Support</h3>
            <p>Need help with our platform? Our technical team is ready to assist you</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Contact Form -->
    <div class="contact-form">
      <div class="form-header">
        <div class="form-icon">✉️</div>
        <h2>Send us a Message</h2>
      </div>
      <form id="contactForm">
        <div class="form-group">
          <label for="name">Full Name</label>
          <input type="text" id="name" name="name" required placeholder="Enter your full name">
        </div>
        
        <div class="form-group">
          <label for="email">Email Address</label>
          <input type="email" id="email" name="email" required placeholder="Enter your email address">
        </div>
        
        <div class="form-group">
          <label for="message">Your Message</label>
          <textarea id="message" name="message" required placeholder="Tell us how we can help you..."></textarea>
        </div>
        
        <button type="submit" class="submit-btn">Send Message</button>
        
        <div id="formResponse" class="response-message"></div>
      </form>
    </div>
  </div>
</main>
<%- include('../main/footer.ejs') %>
<!-- <script src="/role-selection.js"></script> -->
<script src="/navbar/navbar.js"></script>

</body>
</html>